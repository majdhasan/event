<%- include('partials/header'); -%>

<!-- Login -->
<section class="content-section bg-light" id="about">
  <div class="container">
    <div class="row">
      <div class="col col-lg-3 col-md-5 col-sm-5 col-sx-12">
        <img
          class="event-avatar d-block mx-auto mx-md-0"
          src="https://images.unsplash.com/photo-1551818255-e6e10975bc17?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80"
          alt=""
        />
      </div>
      <div class="col col-lg-9 col-md-7 col-sm-7 col-sx-12">
        <div class="row">
          <h1><%- event.title %></h1>
          <form class="ml-auto" action="/chat/new/<%- user._id %>" method="GET">
            <button class="btn btn-primary">Send a Message</button>
          </form>
        </div>
        <div class="row">
          <b> <%- event.date && event.date.toLocaleDateString('de-DE'); %></b>
        </div>
        <div class="row">
          <span><%- event.street + ", " + event.zip +' ' + event.city %></span>
        </div>
        <div class="row">
          From: <%- user && (user.firstname +' ' + user.lastname) %>
        </div>
      </div>
    </div>
    <hr />
    <div class="row">
      <div class="col">
        <h4>Description</h4>
        <p><%- event.descriptionForSupplier %></p>
        <% if (event.lookingFor !== undefined && event.lookingFor.length > 0 ){
        %>
        <hr />
        <h4>Looking For</h4>
        <p><%- event.lookingFor %></p>
        <% } %>
      </div>
    </div>
  </div>
</section>

<!-- Footer -->
<%- include('partials/footer'); -%>
