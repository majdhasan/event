<%- include('partials/header'); -%>

<!-- Login -->
<section class="content-section bg-light" id="about">
  <div class="container text-center">
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <h2>Login</h2>

        <form class="form-signin" action="/login" method="post">
          <!-- <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72"> -->

          <div class="form-group">
            <label for="inputUsername" class="sr-only">Email address</label>
            <input
              name="username"
              type="text"
              id="inputUsername"
              class="mx-auto form-control login-fields"
              placeholder="Username"
              required
              autofocus
            />
            <label for="inputPassword" class="sr-only">Password</label>
            <input
              name="password"
              type="password"
              id="inputPassword"
              class="mx-auto form-control login-fields"
              placeholder="Password"
              required
            />
          </div>
          <button class="btn btn-lg btn-block signin-btn" type="submit">
            Login
          </button>
        </form>
        <h6 class="seperator"><span>or</span></h6>

        <a href="#" class="fb btn login-fields">
          <i class="fa fa-facebook fa-fw"></i> Login with Facebook </a
        ><br />
        <a href="#" class="twitter btn login-fields">
          <i class="fa fa-twitter fa-fw"></i> Login with Twitter </a
        ><br />
        <a href="#" class="google btn login-fields">
          <i class="fa fa-google fa-fw"></i> Login with Google+
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Footer -->
<%- include('partials/footer'); -%>
